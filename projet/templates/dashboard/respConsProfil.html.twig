{% extends 'base.html.twig' %}

{% block title %}Profil Responsable Conseillers{% endblock %}

{% block titre %}Profil Responsable Conseillers{% endblock %}

{% block listeNavBar %}
    <li class="nav-item">
        <a class="nav-link" style="color:white" href="/dashboardRespCons">Tableau de bord</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:white" href="/dashboardRespCons/listeConseillers">Liste des conseillers</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:white" href="/dashboardRespCons/planningGlobal">Planning Global</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:white" href="/dashboardRespCons/stats">Statistiques</a>
    </li>
{% endblock %}

{% block body %}
    <style>
        .borderProfil {border: 2px solid #343a40}
    </style>

    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            {% for respCons in responsableCons %}
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px" src="{{ respCons.imageFile }}">
                    <span class="font-weight-bold">{{ respCons.prenom }} {{ respCons.nom }}</span>
                    <span class="text-black-50">{{ respCons.email }}</span>
                </div>
            </div>
            <div class="col-md-5">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Paramètre du Profil</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Nom</label><input type="text" class="form-control" placeholder="nom" value="{{ respCons.nom }}"></div>
                        <div class="col-md-6"><label class="labels">Prenom</label><input type="text" class="form-control" placeholder="prenom" value="{{ respCons.prenom }}"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Téléphone</label><input type="text" class="form-control" placeholder="téléphone" value="{{ respCons.tel }}"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control" placeholder="email" value="{{ respCons.email }}"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Mot de passe</label><input type="password" class="form-control" placeholder="mot de passe" value="{{ respCons.password }}"></div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button">Save Profile</button></div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}